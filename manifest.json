{
  "name" : "Jira Bulk Issue Opener",
  "version" : "1.0",
  "description" : "Helps you open all issues in an Epic in a new tab.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_icon" : "icon-48.png",
    "default_title": "Jira bulk tab opener"
  },
  "externally_connectable": {
    "matches": ["https://kitomba.atlassian.net/*"]
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["https://kitomba.atlassian.net/*"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    "clickListener.js"
  ],
  "icons" : {
    "16" : "icon-16.png",
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "manifest_version": 2
}
